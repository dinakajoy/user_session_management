{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "removeComments": true,
    "noImplicitAny": true,
    "rootDir": "./src",
    "paths": {
      "@src/*": ["src/"]
    },
    "outDir": "./dist"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "coverage"]
}
